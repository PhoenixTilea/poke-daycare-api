{
   "compilerOptions": {
      "lib": [
         "esnext"
      ],
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "isolatedModules": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": false
   },
   "include": [
      "./src",
      "./tests"
   ]
}